<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="com.example.opilane.MyApplication.MainActivity"
    android:orientation="vertical"
    android:gravity="top"
    android:textAligment="center"
    android:background="#6495ed"
    android:weightSum="1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/textView"
        android:layout_weight="0.07"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="@string/kaks"
        android:textColorLink="?android:attr/editTextColor"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        tools:textstyle="bold|italic"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editOp1"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Sisesta esimene number"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="15sp"
        android:textColorHighlight="#000000"
        android:visibility="visible"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editOp2"
        android:elevation="1dp"
        android:ems="10"
        android:gravity="center_horizontal"
        android:hint="Sisesta teine number"
        android:inputType="number"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textColorHighlight="#000000"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
    <Button
        android:id="@+id/liida"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="+"
        android:textcolor="#000000"/>
    <Button
        android:id="@+id/lahuta"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="-"
        android:textcolor="#000000"/>
    <Button
        android:id="@+id/korruta"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="*"
        android:textcolor="#000000"/>
    <Button
        android:id="@+id/jaga"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="/"
        android:textcolor="#000000"/>
    <Button
        android:id="@+id/kustuta"
        android:layout_width="78dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.03"
        android:text="c"
        android:textcolor="#000000"/>





        </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="332dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:fontFamily="serif"
        android:gravity="center_horizontal"
        android:text="@string/tulemus"
        android:textColor="000000"
        android:textColorLink="?android:attr/editTextColor"
        android:textSize="30sp"
        android:textStyle="bold|italic"
        android:visibility="visible"
        tools:textStyle="bold|italic" />



        </LinearLayout>








